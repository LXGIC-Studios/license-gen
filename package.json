{
  "name": "@lxgicstudios/license-gen",
  "version": "1.0.0",
  "description": "Generate LICENSE files for any OSI-approved license from the command line. Supports MIT, Apache-2.0, GPL-3.0, BSD-2-Clause, ISC, and more. Auto-fills author name and year.",
  "main": "dist/index.js",
  "bin": {
    "license-gen": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "license",
    "generator",
    "mit",
    "apache",
    "gpl",
    "bsd",
    "isc",
    "osi",
    "spdx",
    "cli",
    "open-source"
  ],
  "author": "LXGIC Studios",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lxgicstudios/license-gen"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  }
}
